@article{hanel_phenotypic_2015,
	title = {Phenotypic response of plants to simulated climate change in a long-term rain-manipulation experiment: a multi-species study},
	volume = {177},
	issn = {0029-8549, 1432-1939},
	url = {http://link.springer.com/article/10.1007/s00442-015-3231-8},
