	langid = {french},
	file = {Full Text PDF:/home/clement/Zotero/storage/NKRMB7R3/Deleglise - 2011 - Hétérogénéité spatiale des composantes spécifiques.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/IDBC23Z5/tel-00609989.html:text/html}
}

