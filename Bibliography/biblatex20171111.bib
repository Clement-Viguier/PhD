	urldate = {2017-06-23},
	date = {2016-10-01},
	langid = {english},
	keywords = {functional traits, leaf economics spectrum, Community structure, soil fertility, Species Turnover, grazing rotation, plant–herbivore interactions, rangeland sustainability},
	file = {Full Text PDF:/home/clement/Zotero/storage/NX4P5HVQ/Niu et al. - 2016 - Grazing-induced shifts in community functional com.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/NQF4ZC76/abstract.html:text/html}
