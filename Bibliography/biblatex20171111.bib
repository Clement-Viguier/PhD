	keywords = {biodiversity, Community dynamics, Grassland management, mass-ratio hypothesis, repeated measures, trait convergence and divergence, trait intraspecific variability, variance partitioning},
	file = {Full Text PDF:/home/clement/Zotero/storage/SXDZXXPA/de Bello et al. - 2011 - Quantifying the relevance of intraspecific trait v.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/RPNDHHBB/abstract.html:text/html}
