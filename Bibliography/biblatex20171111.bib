	number = {5},
	journaltitle = {J Ecol},
	author = {Bennett, Jonathan A. and Riibak, Kersti and Tamme, Riin and Lewis, Rob J. and Pärtel, Meelis},
	urldate = {2017-03-01},
	date = {2016-09-01},
	langid = {english},
	keywords = {functional diversity, specific leaf area, specific root length, biomass allocation, biotic interactions, community assembly, trait divergence, plant–plant interactions, competitive hierarchies, trait clustering},
	file = {Full Text PDF:/home/clement/Zotero/storage/9IGG73FQ/Bennett et al. - 2016 - The reciprocal relationship between competition an.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/GNJ72T3E/abstract.html:text/html}
}

@article{matesanz_global_2010,
	title = {Global change and the evolution of phenotypic plasticity in plants},
	volume = {1206},
	issn = {1749-6632},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/j.1749-6632.2010.05704.x/abstract},
