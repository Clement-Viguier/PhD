@article{alpert_relative_2002,
	title = {The relative advantages of plasticity and fixity in different environments: when is it good for a plant to adjust?},
	volume = {16},
	issn = {0269-7653, 1573-8477},
	url = {https://link.springer.com/article/10.1023/A:1019684612767},
