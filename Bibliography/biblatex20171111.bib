	journaltitle = {J Veg Sci},
	author = {Freschet, Grégoire T. and Kichenin, Emilie and Wardle, David A.},
	urldate = {2015-03-31},
	date = {2015-01-01},
	langid = {english},
	keywords = {specific leaf area, specific root length, biomass allocation, Functional equilibrium hypothesis, Above-ground and below-ground resources, Leaf and root morphology, Leaf mass fraction, Plant functional diversity, Root mass fraction},
	file = {Full Text PDF:/home/clement/Zotero/storage/VBARI6FW/Freschet et al. - 2015 - Explaining within-community variation in plant bio.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/53WFP42R/abstract.html:text/html}
