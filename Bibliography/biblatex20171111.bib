	author = {Freschet, Grégoire T. and Bellingham, Peter J. and Lyver, Philip O'B. and Bonner, Karen I. and Wardle, David A.},
	urldate = {2015-03-19},
	date = {2013-04-01},
	langid = {english},
	keywords = {intraspecific variation, specific leaf area, specific root length, plant functional traits, Light availability, plant physiological ecology, seabird burrowing, soil nutrients},
