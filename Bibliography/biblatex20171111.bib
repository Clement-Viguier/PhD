	date = {2004-01-01},
	keywords = {leaf life span, photosynthesis, specific leaf area, drought tolerance, wood density, chaparral, drought avoidance, ecological strategy, ecosystem, mediterranean-type, fire ecology, leaf habit, water potential},
	file = {Snapshot:/home/clement/Zotero/storage/EX6646QS/03-4022.html:text/html}
