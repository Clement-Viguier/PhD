	author = {Adler, Peter B. and Salguero-Gómez, Roberto and Compagnoni, Aldo and Hsu, Joanna S. and Ray-Mukherjee, Jayanti and Mbeau-Ache, Cyril and Franco, Miguel},
	urldate = {2015-06-01},
	date = {2014-01-14},
	langid = {english},
	pmid = {24379395},
	keywords = {specific leaf area, elasticity, seed size, vital rates, wood intensity},
	file = {Full Text PDF:/home/clement/Zotero/storage/VD7IKW3H/Adler et al. - 2014 - Functional traits explain variation in plant life .pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/BK2ZGI5E/740.html:text/html}
