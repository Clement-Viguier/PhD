	keywords = {Phenotypic plasticity, spatial scale, genetic differentiation, plant–climate interactions, adaptive potential, reciprocal transplantation experiment, sympatric vs. allopatric contrast},
	file = {Full Text PDF:/home/clement/Zotero/storage/9QEX7QBS/Hamann et al. - 2016 - Evidence of local adaptation to fine- and coarse-g.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/NPATTDBS/abstract.html:text/html}
