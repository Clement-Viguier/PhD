	author = {Fort, Florian and Cruz, Pablo and Catrice, Olivier and Delbrut, Antoine and Luzarreta, Manuel and Stroia, Ciprian and Jouany, Claire},
	urldate = {2015-02-03},
	date = {2015-02},
	keywords = {Drought, Fabaceae, {GLM}, {PCA}, Phosphorus, Root functional trait},
