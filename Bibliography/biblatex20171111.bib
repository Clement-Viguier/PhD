	urldate = {2014-10-21},
	date = {2014-01},
	keywords = {Individual-based model, Weed, 3D, Arable crops, Morphological plasticity},
	file = {ScienceDirect Full Text PDF:/home/clement/Zotero/storage/DM7IT78M/Munier-Jolain et al. - 2014 - Investigating and modelling the morphological plas.pdf:application/pdf;ScienceDirect Snapshot:/home/clement/Zotero/storage/QW7CFCUE/S0378429013003249.html:text/html}
