	keywords = {Plant Sciences, Complexity, Savanna, Catastrophic shifts, Multi-stability, Theoretical Ecology/Statistics, Tree–grass coexistence, Vegetation patterns, Zoology},
	file = {Full Text PDF:/home/clement/Zotero/storage/5B4UVGAM/Baudena et Rietkerk - 2013 - Complexity and coexistence in a simple spatial mod.pdf:application/pdf;Snapshot:/home/clement/Zotero/storage/GE69WFBA/10.html:text/html}
}

@article{kohyani_grazing_2011,
