@article{roumet_root_2016,
	title = {Root structure–function relationships in 74 species: evidence of a root economics spectrum related to carbon economy},
	volume = {210},
	issn = {1469-8137},
	url = {http://onlinelibrary.wiley.com/doi/10.1111/nph.13828/abstract},
	doi = {10.1111/nph.13828},
	shorttitle = {Root structure–function relationships in 74 species},
	abstract = {* Although fine roots are important components of the global carbon cycle, there is limited understanding of root structure–function relationships among species. We determined whether root respiration rate and decomposability, two key processes driving carbon cycling but always studied separately, varied with root morphological and chemical traits, in a coordinated way that would demonstrate the existence of a root economics spectrum ({RES}).


* Twelve traits were measured on fine roots (diameter ≤ 2 mm) of 74 species (31 graminoids and 43 herbaceous and dwarf shrub eudicots) collected in three biomes.


* The findings of this study support the existence of a {RES} representing an axis of trait variation in which root respiration was positively correlated to nitrogen concentration and specific root length and negatively correlated to the root dry matter content, lignin : nitrogen ratio and the remaining mass after decomposition. This pattern of traits was highly consistent within graminoids but less consistent within eudicots, as a result of an uncoupling between decomposability and morphology, and of heterogeneity of individual roots of eudicots within the fine-root pool.


