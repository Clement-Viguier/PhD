
\titleformat{\part}%
  [display]% shape
  {\relax\sffamily\ifthenelse{\NOT\boolean{@tufte@symmetric}}{\begin{fullwidth}}{}}% format applied to label+text
  {\Huge\thepart}% label
  {0pt}% horizontal separation between label and title body
  {\Huge\sffamily\scshape}% before the title body
  [\ifthenelse{\NOT\boolean{@tufte@symmetric}}{\end{fullwidth}}{}]% after the title body
  
\titleformat{\chapter}%
  [block]% shape
  {\relax\sffamily\ifthenelse{\NOT\boolean{@tufte@symmetric}}{\begin{fullwidth}}{}}% format applied to label+text
  {\Huge\thechapter}% label
  {1em}% horizontal separation between label and title body
  {\huge\sffamily\scshape}% before the title body
  [\ifthenelse{\NOT\boolean{@tufte@symmetric}}{\end{fullwidth}}{}]% after the title body

\titleformat{\section}%
  [hang]% shape
  {\rmfamily\Large}% format applied to label+text
  {\thesection}% label
  {1em}% horizontal separation between label and title body
  {}% before the title body
  []% after the title body

\titleformat{\subsection}%
  [hang]% shape
  {\rmfamily\large}% format applied to label+text
  {\thesubsection}% label
  {1em}% horizontal separation between label and title body
  {}% before the title body
  []% after the title body

\titleformat{\paragraph}%
  [block]% shape
  {}% format applied to label+text
  {\theparagraph}% label
  {}% horizontal separation between label and title body
  {\setmarginnotefont{\sffamily\scshape\color{myGreen}}\begin{marginnote}}% before the title body
  [\end{marginnote}]
  
\titlespacing*{\paragraph}{0pt}{*1}{-1.5em}
  
\renewenvironment{quote}{\itshape\large \hspace{2em}}{\\}

